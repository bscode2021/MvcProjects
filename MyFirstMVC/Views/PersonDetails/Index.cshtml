@model IEnumerable<MyFirstMVC.Models.Entities.PersonDetails>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkPosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PictureURl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkPosition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PictureURl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Education)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationLevel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DetailsID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DetailsID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DetailsID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
