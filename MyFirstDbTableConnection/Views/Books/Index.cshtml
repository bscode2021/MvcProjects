@model List<BookViewModel>
@{
}

<h2>List of books</h2>

<a class="btn btn-info btn-lg" asp-action="Create">Create Book</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Book Name</th>
      <th scope="col">Pages</th>
      <th scope="col">Categories</th>
      <th scope="col">Author</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.Book.Name</td>
                <td>@item.Book.Pages</td>
                <td>
                    @foreach (var category in @item.Categories)
                    {
                        @category.CategoryName  
                    }
                </td>
                <td>@item.Book.Author</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Book.BookID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Book.BookID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Book.BookID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>